global-reset()

#app
  font-family 'Exo 2', Helvetica, Arial, sans-serif
  font-size 18px
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color #2c3e50
  display flex
  min-height 100vh
  flex-direction column

#wrapper
  flex 1

#main-navigation
  border solid #333
  border-top-width 1px
  border-right-width 0px
  border-bottom-width 3px
  border-left-width 0px
  margin-bottom 1.5rem
  background-color #ffffff
  background-color rgba(255, 255, 255, 0)

.category-list, .tagcloud, .archive-list
  padding-top 0.5rem

span
  &.archive-list-count
    &::before
      content " ("
    &::after
      content ")"
  &.category-list-count
    &::before
      content " ("
    &::after
      content ")"
  &.tag-list-count
    &::before
      content " ("
    &::after
      content ")"

.tab
  background-color inherit
  border solid #333
  border-top-width 0px
  border-right-width 0px
  border-bottom-width 3px
  border-left-width 0px
  padding 0.5rem 0 0.25rem 0.25rem

.article
  padding-top 0.5rem
  flex-shrink 2

.article-title
  padding 0
  margin 0
  line-height 1.3
  font-size 0.9rem

.widget
  padding-top 1rem

.offwhite-bg
  background-color #fcfcfc

.overflow
  overflow-wrap normal

.custom-footer
  width 100%
  padding-top 10px
  padding-bottom 10px
  align-self flex-end

.menu-icons
  padding-right 15px

.public-key
  padding-top 15px

.level.social-icons
  padding-top 1.5rem
  margin-bottom 0

a
  &:link
    color black
  &:visited
    color black
  &:hover
    color #64171a

.is-horizontal-center
  justify-content center

.is-size-6-7
  font-size 0.9rem

.card
  border-radius 10px

.panel
  border-radius 10px

.page-enter-active, .page-leave-active
  transition all 0.25s

.page-enter, .page-leave-active
  opacity 0

.job-date
  font-style italic
  font-size 0.90rem

.job-skills
  font-style italic
  font-size 0.90rem

.list-item
  height 20px

.menu
  padding-top 15px

#profile
  height 60%
  width 60%
  border-radius 50%

#hero-override
  padding-top 1.5rem
  padding-bottom 1.5rem

.media-left-override
  margin-right 8px

@import "_partial/insight"

